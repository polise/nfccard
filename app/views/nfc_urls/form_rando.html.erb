<%= simple_form_for(@nfc_url, url: nfc_urls_path, method: :show) do |f| %>
   <%= f.hidden_field :behaviour, :value => 'random' %>

  <% if @nfc_url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@nfc_url.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
      <% @nfc_url.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  <%= f.fields_for :random_url, @nfc_url.random_url do |rando| %>

