      <%= rando.label "URL 3:" %> 
      <%= rando.text_field :url_3 %>
    </div>
 
  <% end %>
  

  <div class="actions">
          <%= f.button 'submit', "Now that's what I'm talking about!" %>

  </div>
<% end %>
