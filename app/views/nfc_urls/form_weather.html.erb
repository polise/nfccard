      <%= weather.label "URL 2" %><br>
      <%= weather.text_field :url_2 %> 
      <%= weather.select( :weather_2,  ['Will load when it is...', 'Sunny', 'Raining', 'Overcast']) %>
      </div>
 
  <% end %>

    <%= f.fields_for :weather_url, @nfc_url.weather_url do |weather| %>

    <div class="field">
      <%= weather.label "URL 3" %><br>
      <%= weather.text_field :url_3 %> 
      <%= weather.select( :weather_3,  ['Will load when it is...', 'Sunny', 'Raining', 'Overcast']) %>
